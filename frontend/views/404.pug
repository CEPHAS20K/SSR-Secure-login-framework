extends ./layouts/base

block content
  #errorScene.relative.flex.min-h-dvh.items-center.justify-center.overflow-hidden.bg-auth-svg.px-4.py-10
    .pointer-events-none.absolute.inset-0.z-0(class="bg-slate-900/20")
    #errorOrbLeft.pointer-events-none.absolute.left-2.top-20.h-24.w-24.rounded-full.blur-2xl.z-0.bg-fuchsia-300(
      class="sm:left-12 sm:h-32 sm:w-32"
    )
    #errorOrbRight.pointer-events-none.absolute.bottom-20.right-2.h-28.w-28.rounded-full.blur-2xl.z-0.bg-rose-200(
      class="sm:right-10 sm:h-36 sm:w-36"
    )

    .relative.z-10.w-full.max-w-2xl.rounded-3xl.border.p-6.text-center.text-rose-950.border-transparent.bg-transparent.shadow-none(
      class="sm:p-8"
    )
      #errorCode.text-xs.font-black.uppercase.text-rose-700(class="tracking-[0.18em]") Error 404
      h1#errorTitle.mt-2.font-headline.text-5xl.leading-none.text-rose-900(class="sm:text-6xl")
        span.inline-block.rounded-full.px-5.py-2.bg-transparent.border-transparent
          | Lost In Space
      p#errorMessage.mx-auto.mt-3.max-w-xl.text-sm.font-semibold.text-rose-800
        | The route you requested drifted out of orbit. Let us reroute you.

      #errorIllustrationWrap.relative.mx-auto.mt-6.w-full.max-w-xl
        img#errorIllustration.w-full.drop-shadow-2xl.mix-blend-multiply.opacity-90.contrast-110.saturate-125(
          src=assetPath("/images/404.svg"),
          alt="404 illustration",
          loading="eager",
          decoding="async"
        )

      #errorActions.mt-7.flex.flex-col.gap-3(class="sm:flex-row sm:justify-center")
        a#errorBtnLogin.rounded-full.bg-primary.px-5.text-sm.font-bold.text-white.transition.border(
          href="/login",
          class="py-2.5 hover:bg-secondary border-rose-300/70"
        ) Back to Login
        a#errorBtnRegister.rounded-full.px-5.text-sm.font-bold.text-fuchsia-950.transition.bg-fuchsia-100.border(
          href="/register",
          class="py-2.5 hover:bg-fuchsia-200 border-fuchsia-200/80"
        ) Go to Register

  script(src=assetPath("/js/errors/404.js"), defer)
