extends ../../layouts/base

include ../../components/navbar
include ../../components/button

block content
  +appNavbar(activePage || "admin")
  #authView.relative.overflow-hidden.bg-auth-svg.min-h-dvh
    .pointer-events-none.absolute.-left-24.top-10.hidden.h-64.w-64.rounded-full.blur-3xl(
      class="bg-fuchsia-200/35 sm:block"
    )
    .pointer-events-none.absolute.-right-24.bottom-16.hidden.h-72.w-72.rounded-full.blur-3xl(
      class="bg-orange-200/35 sm:block"
    )

    .mx-auto.flex.w-full.max-w-3xl.items-center.justify-center.px-4.pt-24.pb-6(
      class="min-h-[calc(100dvh-6rem)] sm:min-h-[calc(100dvh-7rem)] sm:pt-28 sm:pb-8 md:px-6"
    )
      section#adminLoginCard.w-full.max-w-md.rounded-3xl.border.p-6.text-rose-950.shadow-2xl.backdrop-blur-2xl(
        class="border-white/40 bg-white/25 sm:p-8"
      )
        .text-center
          p.text-xs.font-bold.uppercase.tracking-widest.text-rose-700 Admin Area
          h1.mt-2.font-headline.text-4xl.leading-none.text-rose-900(class="sm:text-5xl")
            | Admin Login
          p.mt-2.text-sm.font-semibold.text-rose-800 Sign in to access the dashboard.

        if errorMessage
          #adminFlash.mt-4.rounded-xl.border.p-3.text-sm.font-semibold.text-rose-900.border-rose-300(
            class="bg-rose-100/90"
          )= errorMessage

        form.mt-5.flex.flex-col.space-y-4(action="/admin/login", method="POST")
          .space-y-2
            label.block.text-sm.font-semibold.text-rose-900(for="username") Username
            input#username.w-full.rounded-xl.border.border-rose-200.px-4.py-3.text-sm.font-semibold.text-rose-950(
              type="text",
              name="username",
              placeholder="admin",
              required,
              autocomplete="username",
              class="bg-white/70 focus:border-primary focus:ring-2 focus:ring-primary/20"
            )

          .space-y-2
            label.block.text-sm.font-semibold.text-rose-900(for="password") Password
            input#password.w-full.rounded-xl.border.border-rose-200.px-4.py-3.text-sm.font-semibold.text-rose-950(
              type="password",
              name="password",
              placeholder="••••••••",
              required,
              autocomplete="current-password",
              class="bg-white/70 focus:border-primary focus:ring-2 focus:ring-primary/20"
            )

          +appButton("Sign In", "primary", "submit").mt-1.w-full.py-3

        p.mt-5.text-center.text-xs.font-semibold.text-rose-800
          | Return to
          a.ml-1.text-fuchsia-900.transition(href="/login", class="hover:text-fuchsia-700") user login
