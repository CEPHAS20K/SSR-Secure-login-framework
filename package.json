{
  "name": "auth",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "npm install && npm --prefix ./backend install && npm --prefix ./frontend install",
    "prepare": "husky",
    "dev": "concurrently -n backend,frontend -c cyan,magenta \"npm --prefix ./backend run dev\" \"npm --prefix ./frontend run dev\"",
    "dev:backend": "npm --prefix ./backend run dev",
    "dev:frontend": "npm --prefix ./frontend run dev",
    "build:frontend": "npm --prefix ./frontend run build",
    "build": "npm run build:frontend",
    "start": "npm --prefix ./backend run start",
    "start:proc": "npm run build:frontend && npm --prefix ./backend run start:proc",
    "perf:lighthouse": "npx --yes @lhci/cli@0.15.x autorun --config=./lighthouserc.json",
    "check": "npm run format:check && npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "lint-staged": {
    "*.{js,json,md,pug,css}": "prettier --write"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^3.4.2",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  }
}
