{
    servers {
        protocols h1 h2 h3
    }
}

auth.example.com {
    encode zstd gzip

    # Allow admin routes only from private networks (LAN/VPN).
    @adminPublic {
        path /admin*
        not remote_ip private_ranges
    }
    respond @adminPublic 404

    reverse_proxy 127.0.0.1:8080
}
